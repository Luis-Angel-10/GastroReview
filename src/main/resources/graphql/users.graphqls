schema {
  query: Query
  mutation: Mutation
}

type Query {
  findAll(email: String): [User]
  findById(id: ID!): User
  findByEmail(email: String!): User
}

type Mutation {
  create(input: UserRequestInput!): User
  update(id: ID!, input: UserRequestInput!): User
  delete(id: ID!): Boolean
}

type User {
  id: ID!
  email: String!
  hashPassword: String
  role: String
}

input UserRequestInput {
  email: String!
  hashPassword: String!
  role: String!
}
